{
	// Place your snippets for html here. Each snippet is defined under a snippet name and has a prefix, body and
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
	// same ids are connected.
	// Example:
	"Default email div": {
		"prefix": "tps",
		"body": [
			"<table cellpadding=\"0\" cellspacing=\"0\" border=\"0\">",
			"$2",
			"</table>"
		],
		"description": "Default email div for email"
	},
	"Form name input with wrapper": {
		"prefix": "binput:n",
		"body": [
			"<div class=\"$1__wrap $1__wrap--name\">",
			"\t<input class=\"$1 $1--name\" name=\"user-name\" type=\"text\" placeholder=\"$2\" maxlength=\"50\">",
			"</div>"
		],
		"description": "Form name input with wrapper"
	},
	"Form phone input with wrapper": {
		"prefix": "binput:t",
		"body": [
			"<div class=\"$1__wrap $1__wrap--tel\">",
			"\t<input class=\"$1 $1--phone\" name=\"user-tel\" type=\"tel\" placeholder=\"$2\" maxlength=\"25\" minlength=\"10\" required inputmode=\"numeric\">",
			"</div>"
		],
		"description": "Form name input with wrapper"
	},
	"Form email input with wrapper": {
		"prefix": "binput:e",
		"body": [
			"<div class=\"$1__wrap $1__wrap--email\">",
			"\t<input class=\"$1 $1--email\" name=\"user-email\" type=\"email\" placeholder=\"$2\" required>",
			"</div>"
		],
		"description": "Email input"
	},
	"Form hidden input with wrapper": {
		"prefix": "binput:h",
		"body": [
			"<div class=\"$1__wrap $1__wrap--hidden\">",
			"\t<input class=\"$1 $1--phone\" name=\"$2\" type=\"text\" required hidden readonly>",
			"</div>"
		],
		"description": "Email input"
	},
	"Custom checkbox": {
		"prefix": "bcheckbox",
		"body": [
			"<label class=\"$1\">",
			"\t<input class=\"$1__checkbox--hidden\" type=\"checkbox\" checked required hidden >",
			"\t<span class=\"$1__checkbox\"></span>",
			"\t<p class=\"$1-desc\">Согласен <a href=\"#\" class=\"$1-desc__link\">политикой конфиденциальности</a></p>",
			"</label>"
		],
		"description": "Custom checkbox"
	},
	"Picture and webp support": {
		"prefix": "bpic",
		"body": [
			"<picutre class=\"$1\">",
				"\t<source",
					"\t\tsrcset=\"$2@1.${3:webp} 1x, $2@2.${3:webp} 2x,\"",
					"\t\ttype=\"image/webp\">",
				"\t<img class=\"$1--img\"",
					"\t\tsrc=\"$2@1.${4:png}\"",
					"\t\tsrcset=\"$2@2.${4:png} 2x\"",
					"\t\talt=\"$4\">",
			"</picture>",
		],
		"description": "Responsive picture tag"
	},
	"favicon:png": {
		"prefix": "fav:png",
		"body": [
			"<link rel=\"icon\" type=\"image/png\" href=\"$1\" />"
		],
		"description": "png favicon link"
	},
	"swiper-base": {
		"prefix": "swbs",
		"body": [
			"<div class=\"swiper $1\">",
				"\t<div class=\"swiper-wrapper\">",
					"\t\t<div class=\"swiper-slide $2\"></div>",
				"\t</div>",
				"\t<div class=\"swiper-pagination $3\"></div>",
				"\t<div class=\"swiper-button-prev $4\"></div>",
				"\t<div class=\"swiper-button-next $4\"></div>",
				"\t<div class=\"swiper-scrollbar $5\"></div>",
			"</div>"
		],
		"description": "swiper base layout",
	}
}
